
	tb_users
		
		
		data_id				int		11			Unique data set ID
		
		login_name			text	-			Login username [CRYPTED]
		
		login_pass			string	135			Login password [HASHED]
		
		login_count			int		11	(0)		Num of login
		
		user_name_first		text	-			Users real first name [CRYPTED]
		
		user_name_last		text	-			Users real last name [CRYPTED]
		
		user_mail			text	-			Users mail address [CRYPTED]
				
		time_login			bigint	20	(0)		Unix Timestamp for last login
		
		time_create			bigint	20			Unix Timestamp
		
		time_update			bigint	20	(0)		Unix Timestamp
		
		cookie_id			text	-			JSON String of Cookie-ID Sessions, can carry multiple sessions
		
		recover_key			string	65	(NULL)	A key for password change [HASHED]
		
		recover_timeout		bigint	20	(0)		Unix Timestamp for password change
				
		is_locked			tinyint 3	(1)		Account is locked by reason, 0 = not locked, 1 = mail address not verified, 2 = locked by fail login, 3 = locked by adminitrator  ...
		
		
		
	Remarks
	
		For CLogin.php, the following columns are required for all tables used for logon operations
		
			data_id / login_count / time_login / cookie_id / is_locked
		
		
		
		
CREATE TABLE `tb_users` (
  `data_id` int(11) NOT NULL,
  `login_name` text COLLATE utf8mb4_unicode_ci NOT NULL,
  `login_pass` varchar(135) COLLATE utf8mb4_unicode_ci NOT NULL,
  `login_count` int(11) NOT NULL DEFAULT '0',
  `user_name_first` text COLLATE utf8mb4_unicode_ci NOT NULL,
  `user_name_last` text COLLATE utf8mb4_unicode_ci NOT NULL,
  `user_mail` text COLLATE utf8mb4_unicode_ci NOT NULL,
  `time_login` bigint(20) NOT NULL DEFAULT '0',
  `time_create` bigint(20) NOT NULL,
  `time_update` bigint(20) NOT NULL DEFAULT '0',
  `cookie_id` text COLLATE utf8mb4_unicode_ci NOT NULL,
  `recover_key` varchar(65) COLLATE utf8mb4_unicode_ci DEFAULT NULL,
  `recover_timeout` bigint(20) NOT NULL DEFAULT '0',
  `is_locked` tinyint(4) NOT NULL DEFAULT '1'
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;


ALTER TABLE `tb_users`
  ADD UNIQUE KEY `data_id` (`data_id`);


ALTER TABLE `tb_users`
  MODIFY `data_id` int(11) NOT NULL AUTO_INCREMENT;
  
  